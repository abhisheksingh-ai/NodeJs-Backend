<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
        <p>URL GENERATED: http://localhost:3002/api/url/<%= id %></p>
    <%} %>
    <div>
        <form action="/api/url" method="post">
            <label for="">Enter your original URL</label>
            <input type="text" name="url" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>

    <div>
        <%if (locals.urls) {%>
            <table>
                <thead>
                    <th>S. No</th>
                    <th>ShortUrl</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td> <%= index+1 %> </td>
                            <td> <%= url.ShortUrl %> </td>
                            <td> <%= url.redirectUrl %> </td>
                            <td> <%= url.analytics.length %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        
    </div>
</body>
</html>